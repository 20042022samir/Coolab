@using CoolApp.Core.Entities;
@model PagginationViewModel<Subject> 
  
<!-- Category Start -->
<div style="padding-top:1rem;padding-bottom:1rem">
    <div class="container pt-5 pb-3">
        <div class="text-center mb-5">
            <h1>Tədris etdiyimiz bütün sahələr</h1>
        </div>
        <div class="row">
            @foreach (var item in Model.Items)
            {

                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="cat-item position-relative overflow-hidden rounded mb-2">
                        <img class="img-fluid" src="~/Assets/img/@item.Image" alt="" style="width:100%;height:200px;">
                        <a class="cat-overlay text-white text-decoration-none" asp-controller="home" asp-action="subjectdetail" asp-route-id="@item.Id">
                            <h4 class="text-white font-weight-medium">@item.Name</h4>
                            <span>@item.Courses.Count() Seminar</span>
                        </a>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
<!-- Category Start -->

                    <div class="col-12">
                        <nav aria-label="Page navigation">
                            <ul class="pagination pagination-lg justify-content-center mb-0">

                                 @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                <li class="page-item"><a class="page-link" href="@Url.Action("GetAllSubjects", new { page = i, pageSize = Model.PageSize })">@i</a></li>
                    }

                            </ul>
                        </nav>
                    </div>

