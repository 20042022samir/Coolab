@model Event

<form method="post" style="margin:10px;" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Ad</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Name.." asp-for="@Model.Name">
        <span class="alert alert-text" asp-validation-for="@Model.Name" style="color:red; font-size:16px;"></span>
    </div>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Descriiption</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Description.." asp-for="@Model.Description">
        <span class="alert alert-text" asp-validation-for="@Model.Description" style="color:red; font-size:16px;"></span>
    </div>


    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Baslama Tarixi</label>
        <input type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Description.." asp-for="@Model.StartedDate">
        <span class="alert alert-text" asp-validation-for="@Model.StartedDate" style="color:red; font-size:16px;"></span>
    </div>



    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Image</label>
        <input type="file" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="image.." asp-for="@Model.file">
        <span class="alert alert-text" asp-validation-for="@Model.file" style="color:red; font-size:16px;"></span>
    </div>





    <button type="submit">Guncelle</button>
</form>