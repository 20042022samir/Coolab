<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/ea89281bc3.js" crossorigin="anonymous"></script>

@model IEnumerable<Comment>

<style>
    #tableData {
        width: 100%;
        height: 500px;
    }

    #containerDiv {
        width: 500px;
    }

    #image {
        width: 100px;
        height: 100px;
    }

    @@media screen and(max-width:600px) {

        #containerDiv {
            width: 300px;
        }

        #image {
            width: 50px;
            height: 50px;
        }
    }
</style>





<div style="display:flex;flex-direction:column;">

    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ad</th>
                <th scope="col">Seminar</th>
                <th scope="col">Sil</th>
                <th scope="col">Ana Ekrana Əlavə et</th>
                <th scope="col">Comment</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.FullName</td>
                    <td>@item.Course.Name</td>
                    <td><a asp-controller="course" asp-action="DeleteCourseComment" asp-route-id="@item.Id">Sil</a></td>
                    @if (item.ForHomeScreen == true)
                    {

                        <td><a asp-controller="course" asp-action="RemoveCommentFormHome" asp-route-Id="@item.Id" style="color:red;">Sil</a></td>
                    }
                    else
                    {

                        <td><a asp-controller="course" asp-action="MakeCommentDForHome" asp-route-Id="@item.Id">Elave Et</a></td>
                    }

                    <td><a asp-controller="course" asp-action="ShowCourseMessagee" asp-route-Id="@item.Id">Commet</a></td>
                </tr>

            }
        </tbody>
    </table>
</div>

