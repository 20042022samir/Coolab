@using CoolApp.Core.Entities;
@model Subject   
 


@if (Model.Courses.Count() == 0)
{
    <h2 style="color:red;text-align:center;">Bu sahənin tədbiri yoxdur!</h2>
}
else
{

<div class="container-fluid ">
    <div class="container ">
        <div class="text-center mb-5">
            <h1>@Model.Name sahəsinə aid seminarlarımız</h1>
        </div>
        <div class="row">
           
           @foreach (var item in Model.Courses)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="rounded overflow-hidden mb-2">
                        <img class="img-fluid" src="~/Assets/img/@item.Image" alt="" style="width:100%;height:350px;" >
                        <div class="bg-secondary p-4">
                            <div class="d-flex justify-content-between mb-3">
                                    <small class="m-0"><i class="fa-solid fa-book"></i>@Model.Name</small>
                            </div>
                            <a class="h5" href="">@item.Name</a>
                            <div class="border-top mt-4 pt-4">
                                <div class="d-flex justify-content-between">
                                       <a asp-controller="course" asp-action="detail" asp-route-id="@item.Id" style="padding:6px 9px; background-color:orangered;color:white;cursor:pointer;">Müraciət et</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
</div>
}
<!-- Courses End -->
