@using CoolApp.Core.Entities;
@model PagginationViewModel<BlogCategory>

<h2 style="text-align:center;">@ViewBag.Cat.Name</h2>

<!-- Blog Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row"  style="justify-content:center;">
            <div class="col-lg-8">
                <div class="row pb-3">
                    @if (Model.Items.Count() == 0)
                    {
                        <h2 style="text-align:center;">-</h2>
                    }
                    @foreach (var item in Model.Items)
                    {
                        
                        <div class="col-lg-6 mb-4">
                            <div class="blog-item position-relative overflow-hidden rounded mb-2">
                                <img class="img-fluid" src="~/Assets/img/@item.Blog.Image" alt="" style="width:100%;height:280px;">
                                <a class="blog-overlay text-decoration-none" asp-controller="blog" asp-action="detail" asp-route-id="@item.Blog.Id">
                                    <h5 class="text-white mb-3">@item.Blog.Title</h5>
                                    <p class="text-primary m-0">@item.Blog.CreatedDate.Day:@item.Blog.CreatedDate.Month:@item.Blog.CreatedDate.Year</p>
                                </a>
                            </div>
                        </div>

                    }
                </div>

                <div class="col-12">
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-lg justify-content-center mb-0">

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item"><a class="page-link" href="@Url.Action("BlogCategoryDetail", new {id=ViewBag.Cat.Id, page = i, pageSize = Model.PageSize })">@i</a></li>
                            }

                        </ul>
                    </nav>
                </div>

            </div>

        </div>
    </div>
</div>
<!-- Blog End -->
