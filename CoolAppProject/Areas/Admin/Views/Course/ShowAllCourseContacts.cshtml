<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
<script src="https://kit.fontawesome.com/ea89281bc3.js" crossorigin="anonymous"></script>

@model IEnumerable<CourseContact>

<style>
    #tableData {
        width: 100%;
        height: 500px;
    }

    @@media screen and (max-width: 800px) {
        #tableData {
            max-width: 300px; /* Adjust the table width for screens smaller than 800px */
        }
        
        /* Hide the "Id" column on screens with a width of 800px or less */
        .hide-id-column {
            display: none;
        }
        .invisiblee{
            display:none;
        }
    }

   
</style>

<div style="display:flex;flex-direction:column;">
    <table class="table table-hover table-dark" id="tableData">
        <thead>
            <tr>
                <th scope="col" class="invisiblee">Id</th>
                <th scope="col">Ad</th>
                <th scope="col">PhoneNumber</th>
                <th scope="col" class="invisiblee">Email</th>
                <th scope="col" class="invisiblee">Vezife</th>
                <th scope="col" class="invisiblee">Uni/Mekteb</th>
                <th scope="col">Kurs</th>
                <th scope="col" class="hide-on-small-screen">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row" class="invisiblee">@item.Id</th>
                    <td>@item.FullName</td>
                    <td>@item.PhoneNumber</td>
                    <td class="invisiblee">@item.Email</td>
                    @if(item.IsTeacher){

                        <td class="invisiblee">Muellim</td>
                    }
                    else if (item.IsStudent)
                    {
                        <td class="invisiblee">Telebe</td>
                    }
                    else
                    {
                        <td class="invisiblee"></td>
                    }
                    @if (item.SchoolUniName != null)
                    {

                        <td class="invisiblee">@item.SchoolUniName</td>
                    }
                    else
                    {
                        <td class="invisiblee"></td>
                    }
                    <td>@item.Course.Name</td>
                    <td class="hide-on-small-screen">
                        <a asp-controller="course" asp-action="DeleteCourseContact" asp-route-id="@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
