<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

<style>
    @@media screen and (max-width: 800px) {
        /* Hide specified columns on screens less than 800px */
        th:nth-child(1),
        td:nth-child(1),
        th:nth-child(3),
        td:nth-child(3) {
            display: none;
        }
    }

    /* Optional: Adjust table width and height */
    .table {
        width: 100%;
        max-width: 500px; /* Adjust max-width to your preference */
        height: auto;
    }

    /* Optional: Adjust table header cell height */
    .table th {
        height: 40px; /* Adjust cell height as needed */
    }
</style>

<div style="display:flex;flex-direction:column;">
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Adress</th>
                <th scope="col">PhoneNumber</th>
                <th scope="col">Email</th>
                <th scope="col">Logo</th>
                <th scope="col">Update</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Address</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td><img src="~/Assets/img/@item.Logo" style="width:100px;" /></td>
                    <td><a asp-controller="pagedata" asp-action="update" asp-route-id="@item.Id">Update</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
