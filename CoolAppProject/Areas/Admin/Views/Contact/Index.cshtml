<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

<style>
    #tableData {
        width: 100%;
        height: 500px;
    }

    #containerDiv {
        width: 500px;
    }

    @@media screen and (max-width: 800px) {
        /* Hide specified columns on screens less than 800px */
        th:nth-child(1),
        td:nth-child(1),
        th:nth-child(5),
        td:nth-child(5) {
            display: none;
        }
    }

    @@media screen and (max-width: 600px) {
        /* Adjust styles for screens less than 600px */
        #containerDiv {
            width: 300px;
        }
        
        /* Adjust specific column styles for smaller screens */
        #messge {
            word-break: break-all; /* or any other preferred value */
        }
    }
</style>

<div style="display:flex;flex-direction:column;">
    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ad</th>
                <th scope="col">Nömrə</th>
                <th scope="col">Email</th>
                <th scope="col">Mesaj</th>
                <th scope="col">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td id="messge" style="word-break:break-all;">@item.Message</td>
                    <td><a asp-controller="contact" asp-action="delete" asp-route-id="@item.Id">Sil</a></td>
                </tr>
                
            }
        </tbody>
    </table>
</div>
