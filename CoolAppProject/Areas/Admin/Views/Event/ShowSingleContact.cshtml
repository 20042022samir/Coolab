@model Event

<style>
    #tableData {
        width: 100%;
        height: 500px;
    }

    #containerDiv {
        width: 500px;
    }

    #image {
        width: 100px;
        height: 100px;
    }

    @@media screen and(max-width:600px) {

        #containerDiv {
            width: 300px;
        }

        #image {
            width: 50px;
            height: 50px;
        }
    }
</style>





<div style="display:flex;flex-direction:column;">

    <table class="table table-hover table-dark">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ad</th>
                <th scope="col">Telefon</th>
                <th scope="col">Mail</th>
                <th scope="col">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.messages)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.UserName</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Email</td>
                    <td><a asp-controller="event" asp-action="DeleteEventContact" asp-route-id="@item.Id">Sil</a></td>

                </tr>

            }
        </tbody>
    </table>
</div>

